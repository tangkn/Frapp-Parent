<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="100" author="gokhantan">
        <preConditions>
            <not>
                <tableExists tableName="logs"></tableExists>
            </not>
        </preConditions>
        <createTable tableName="t_logs">
            <column name="id" type="BIGINT" autoIncrement="true" />
            <column name="event_date" type="TIMESTAMP" />
            <column name="level" type="VARCHAR(10)"/>
            <column name="logger" type="VARCHAR(255)" defaultOnNull="false"/>
            <column name="message" type="TEXT" />
        </createTable>
    </changeSet>

    <changeSet id="101" author="gokhantan">
        <addPrimaryKey tableName="t_logs" constraintName="PK_logs" columnNames="id"></addPrimaryKey>
    </changeSet>

</databaseChangeLog>